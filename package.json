{
  "name": "inventory-project-sofka",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start-command:dev": "nest start inventory-project-sofka --watch",
    "start-query:dev": "nest start inventory-query --watch",
    "start-socket:dev": "nest start web-socket --watch",
    "start-auth:dev": "nest start authorization --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/inventory-project-sofka/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/inventory-project-sofka/test/jest-e2e.json"
  },
  "dependencies": {
    "@golevelup/nestjs-rabbitmq": "^4.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/microservices": "^10.2.6",
    "@nestjs/mongoose": "^10.0.1",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.2.7",
    "@nestjs/typeorm": "^10.0.0",
    "@nestjs/websockets": "^10.2.7",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.3",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.3",
    "mysql2": "^3.6.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "socket.io": "^4.7.2",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.4",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/"
    ],
    "coveragePathIgnorePatterns": [
      "./apps/domain/lib",
      "./apps/authorization/src/infrastructure/seed",
      "./apps/inventory-project-sofka/src/infrastructure/seed",
      "/node_modules/",
      "/test/",
      ".module.ts",
      ".mock.ts",
      "main.ts",
      "index.ts"
    ],
    "moduleNameMapper": {
      "@Domain(.*)": "<rootDir>/apps/domain$1",
      "@Sofka(.*)": "<rootDir>/apps/domain/lib$1",
      "@CommandApplication(.*)": "<rootDir>/apps/inventory-project-sofka/src/application$1",
      "@CommandInfrastructure(.*)": "<rootDir>/apps/inventory-project-sofka/src/infrastructure$1",
      "@QueryApplication(.*)": "<rootDir>/apps/inventory-project-sofka/src/application$1",
      "@QueryInfrastructure(.*)": "<rootDir>/apps/inventory-query/src/infrastructure$1",
      "@Domain/(.*)": "<rootDir>/apps/domain/$1",
      "@Sofka/(.*)": "<rootDir>/apps/domain/lib$1",
      "@CommandApplication/(.*)": "<rootDir>/apps/inventory-project-sofka/src/application/$1",
      "@CommandInfrastructure/(.*)": "<rootDir>/apps/inventory-project-sofka/src/infrastructure/$1",
      "@QueryApplication/(.*)": "<rootDir>/apps/inventory-query/src/application/$1",
      "@QueryInfrastructure/(.*)": "<rootDir>/apps/inventory-query/src/infrastructure/$1"
    }
  }
}
